/*python*/
def calculate_area(r):
return f"Calculated area of a circle: {3.14 * r ** 2} "

def calculate_radius(a):
return f"Calculated circle radius: {((a / 3.14) ** 0.5):.2f} "

def calculate_volume(l):
return f"Calculated cube volume: {l ** 3} "

def calculate_length(v):
return f"Calculated cube edge length: {v ** (1 / 3):.2f} "

def pump(*funcs):
def wrapper(*args):
for func in funcs:
if "area" in func.__name__:
print("Current Shape: Circle")
print(func(*args))
else:
print("Current shape: Cube")
print(func(*args))
print()
return wrapper

pumped_circle = pump(calculate_area, calculate_radius)
pumped_circle(5)

pumped_cube = pump(calculate_volume, calculate_length)
pumped_cube(125)
